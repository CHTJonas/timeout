server {
    listen 80;
    listen [::]:80;
    server_name {% for alias in nginx_redirect_aliases %} {{ alias }} {% endfor %} ;

    location /.well-known/acme-challenge {
        root /var/www/letsencrypt;
        try_files $uri $uri/ =404;
    }

    location / {
        rewrite ^ https://{{ nginx_domain_name }}$request_uri? permanent;
    }
}
